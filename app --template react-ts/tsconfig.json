{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "strict": true,

    /* Node/Electron typings for main & preload */
    "types": ["node", "electron"],

    /* Emit is allowed for referenced projects (even if your bundler ignores it).
       We direct any potential output to a temp folder to keep things tidy. */
    "outDir": "./.ts-node-out"
  },
  "include": ["electron/**/*.ts", "electron/**/*.tsx"]
}
