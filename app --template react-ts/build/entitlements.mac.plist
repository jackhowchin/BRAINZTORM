<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" 
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <!-- Allow app to read/write user-selected files and folders -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow app to manage app-specific containers -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- (Optional) If you need outgoing network connections -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- (Optional) If you want to let the app open/save arbitrary files -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
  </dict>
</plist>
